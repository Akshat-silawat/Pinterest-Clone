<% include ./partials/header.ejs %>
 <div class="w-full min-h-screen bg-zinc-800 text-white px-5 py-5">
       <div class="cards flex flex-wrap items-start gap-10 ">
        <% user.posts.forEach(function(elem){ %>
            <div class="card w-40 relative ">
                <div class=" w-full h-auto  bg-red-600 rounded-md overflow-hidden">
                    <img class="  w-full h-auto object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h3 class="mt-2 text-sm"> <%= elem.title %></h3>
                <div class="absolute px-1 py-1 inset-0 bg-black bg-opacity-50 opacity-0 hover:opacity-100  duration-300 ">
                    <a  href="/delete"><i class=" w-3 h-3 flex items-center justify-center rounded-full px-4 py-4 bg-red-600 ri-delete-bin-7-line"></i></a>
                </div>     
            </div>
            <%  }) %>
       </div>
 </div>


<% include ./partials/footer.ejs %>
