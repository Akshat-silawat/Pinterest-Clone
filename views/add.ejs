<% include ./partials/header.ejs %>
   <div class="bg-zinc-800 w-full min-h-screen px-5 py-3 text-white ">
      <h1 class=" text-2xl">Create a new Post</h1>
      <hr class="opacity-30 mt-3">
       <form action="/createpost" method="post" enctype="multipart/form-data">
          <input class="block mt-2  w-1/3 " type="file" name="postimage" >
          <input class="text-black block mt-2 w-1/3  border-2 rounded-lg" type="text" name="title" placeholder="Title" > 
          <textarea class=" text-black block mt-2 w-1/3 h-40  border-2 rounded-lg" name="desc" type="text" placeholder="Description" ></textarea>
          <input class="block mt-2 w-1/3 py-2  bg-red-700 rounded-lg" type="submit" value="Create Post">
       </form>
   </div>

